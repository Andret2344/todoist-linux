{
  "name": "todoist",
  "version": "0.5.0",
  "description": "A Linux desktop client for todoist",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "build --tasks linux-x86,linux-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --x64 --mirror https://dl.nwjs.io/ ."
  },
  "build": {
    "appId": "com.hakimouake.todoistlinux",
    "packed": true,
    "nwVersion": "0.25.4"
  },
  "repository": "",
  "keywords": [
    "to-do",
    "task",
    "todoist",
    "linux"
  ],
  "single-instance": true,
  "window": {
    "title": "Todoist",
    "toolbar": false,
    "position": "center",
    "width": 800,
    "height": 600,
    "icon": "./assets/icon-128.png"
  },
  "webkit": {
    "page-cache": true
  },
  "author": "kamhix <kimly02@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-chmod": "^2.0.0",
    "gulp-gzip": "^1.4.2",
    "gulp-npm-run": "0.0.3",
    "gulp-run-command": "0.0.9",
    "gulp-tap": "^1.0.1",
    "gulp-tar": "^2.1.0",
    "nwjs-builder-phoenix": "^1.14.6"
  }
}

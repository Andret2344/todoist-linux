{
  "name": "Todoist",
  "version": "0.5.0",
  "description": "A Linux desktop client for todoist",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "build --tasks linux-x86,linux-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --x64 --mirror https://dl.nwjs.io/ ."
  },
  "build": {
    "appId": "com.hakimouake.todoistlinux",
    "packed": true,
    "nwVersion": "0.25.4"
  },
  "repository": "",
  "keywords": [
    "to-do",
    "task",
    "todoist",
    "linux"
  ],
  "single-instance": true,
  "window": {
    "title": "Todoist",
    "toolbar": false,
    "position": "center",
    "width": 800,
    "height": 600,
    "icon": "assets/icon.png"
  },
  "webkit": {
    "page-cache": true
  },
  "author": "kamhix <kimly02@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.14.6"
  }
}
